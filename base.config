params {
    kit_name = nullinput_dir = './data'
    output_dir = "./output"
    no_trim = falsebarcode_both_ends = falseemit_fastq = falsethreads = 8
    compress_output = false
}

process {
    withName: '*' {
        cpus = 4
        memory = '16 GB'
        time = '2h'
        container = 'epi2me-labs/dorado:6.5.0'
    }

    withName: 'dorado_demultiplex' {
        cpus = 8
        memory = '32 GB'
        time = '1h'
    }
}

docker {
    enable = true
    runOptions = 'u $(id -u):$(id -g)'
    temp = '/tmp'
}

singularity {
    enabled = falseautoMount = true
}

executor {
    name = 'local'
    queueSiize = 100
    scratch = true
}

workflow {
    onComplete = {
        println "Epi2me Workflow completed successfully!"
    }
}

timeline {
    enabled = truefile = "timeline.html"
}